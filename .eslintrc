{
  "parser": "babel-eslint",
  "rules": {
    // http://eslint.org/docs/rules/
    // Possible Errors
    "comma-dangle": [1, "always-multiline"],
    "no-cond-assign": [2, "always"],
    "no-console": 1,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": [1, "functions"],
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": [2, "functions"],
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": 1,
    "valid-typeof": 2,
    "no-unexpected-multiline": 2,

    // Best Practices
    "accessor-pairs": 1,
    "block-scoped-var": 2,
    "complexity": 0,
    "consistent-return": 2,
    "curly": [0, "all"],
    "default-case": 1,
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": 1,
    "guard-for-in": 0,
    "no-alert": 2,
    "no-caller": 2,
    "no-case-declarations": 0,
    "no-div-regex": 2,
    "no-else-return": 1,
    "no-labels": 2,
    "no-empty-pattern": 2,
    "no-eq-null": 0,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 1,
    "no-floating-decimal": 2,
    "no-implicit-coercion": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 0,
    "no-iterator": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 1,
    "no-magic-numbers": 0,
    "no-multi-spaces": 1,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-param-reassign": 0,
    "no-process-env": 0,
    "no-proto": 2,
    "no-redeclare": [1, { "builtinGlobals": true }],
    "no-return-assign": [2, "always"],
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
    "no-useless-call": 1,
    "no-useless-concat": 1,
    "no-void": 1,
    "no-warning-comments": 0,
    "no-with": 2,
    "radix": 0,
    "vars-on-top": 0,
    "wrap-iife": [2, "any"],

    // Strict Mode
    "strict": [0, "never"],

    "no-catch-shadow": 2,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow-restricted-names": 2,
    "no-undef-init": 2,
    "no-undefined": 0,
    "no-unused-vars": [1, { "varsIgnorePattern": "debug|h" }],
    "no-use-before-define": 2,

    // Stylistic Issues
    "object-curly-spacing": [1, "always", {"arraysInObjects": true, "objectsInObjects": false}],
    "array-bracket-spacing": [1, "always", {"objectsInArrays": true, "arraysInArrays": false}],
    "block-spacing": [2, "always"],
    "brace-style": 0,
    "computed-property-spacing": [2, "never"],
    "consistent-this": [2, "self"],
    "eol-last": 0,
    "linebreak-style": [0, "unix"],
    "comma-style": [2, "last"],
    "comma-spacing": [2, {"before": false, "after": true}],
    "camelcase": [1, {"properties": "always"}],
    "func-names": 1,
    "id-length": 0,
    "id-match": 0,
    "indent": [2, 2],
    "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
    "lines-around-comment": 0,
    "new-parens": 2,
    "newline-after-var": 0,
    "no-array-constructor": 2,
    "no-continue": 0,
    "no-inline-comments": 0,
    "no-trailing-spaces": 1,
    "no-lonely-if": 1,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [1, { "max": 3 }],
    "no-negated-condition": 0,
    "no-nested-ternary": 0,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-unneeded-ternary": 2,
    "quote-props": 0,
    "quotes": [0, "single", "avoid-escape"],
    "semi-spacing": [2, {"before": false, "after": true}],
    "semi": [2, "never"],
    "keyword-spacing": 1,
    "space-before-blocks": 1,
    "space-in-parens": [1, "never"],
    "space-infix-ops": [1, { "int32Hint": false }],
    "space-before-function-paren": [1, "never"],
    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "wrap-regex": 0,

    // eslint react plugin
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 0,
    "react/prop-types": [0, { "ignore": ["props", "className", "children"] }]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "jsx": true,
  },
  "ecmaFeatures": {
    "classes": true,
    "modules":true,
    "experimentalObjectRestSpread": true
  },
  "globals": {
    "sinon": true,
    "expect": true
  },
  "plugins": [
    "react"
  ]
}
